@model Account.AccountRegisterViewModel;
@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<body class="authentication-body">
	<div class="authentication-wrapper">
		<header class="company-logo">
			<img src="../../image/logo.png" alt="Basilisk" />
			<h1>
				Trade of <span class="bold">basilisk</span>
			</h1>
		</header>
		<main>
			<h1>Sign Up</h1>
			<form method="post" action="">
				<span asp-validation-for="Username"></span>
				<input asp-for="Username" id="username" placeholder="username" autocomplete="off" />

				<span asp-validation-for="Password"></span>
				<input asp-for="Password" id="password" type="password" placeholder="password" />

				<span asp-validation-for="ConfirmPassword"></span>
				<input asp-for="ConfirmPassword" id="confirmpassword" type="password" placeholder="confirm password" />

				<span asp-validation-for="Role"></span>
				<select class="role-user" asp-for=@Model.Role id="@Model.Role" asp-items="@Model.Roles">
					<option value="">No Specific Role</option>
				</select>

				<button type="submit">sign up</button>
			</form>
			<div class="link-container">
				<a asp-action="Index" asp-controller="Account">Click here to login</a>
			</div>
		</main>
	</div>
</body>